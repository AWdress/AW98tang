{
  "//": "=== 基础配置 ===",
  "base_url": "https://sehuatang.org/",
  "username": "你的用户名",
  "password": "你的密码",
  "security_question_id": "1",
  "security_answer": "你的安全问题答案",
  
  "//": "=== 回复功能配置 ===",
  "enable_auto_reply": true,
  "enable_smart_reply": true,
  "max_replies_per_day": 30,
  "reply_interval": [3600, 7200],
  
  "//": "注意：reply_interval 是回复间隔（秒）",
  "//": "- 格式: [最小值, 最大值]，如 [3600, 7200] 表示 1-2 小时随机间隔",
  "//": "- 建议设置较长间隔，避免被检测",
  
  "//": "=== 签到功能配置 ===",
  "enable_daily_checkin": true,
  
  "//": "注意：论坛规则要求先回复帖子才能签到",
  
  "//": "=== 测试模式配置 ===",
  "enable_test_mode": false,
  "enable_test_checkin": false,
  "enable_test_reply": false,
  
  "//": "测试模式说明：",
  "//": "- enable_test_mode: 测试所有功能（回复+签到），不实际提交",
  "//": "- enable_test_checkin: 仅测试签到，找到按钮但不点击",
  "//": "- enable_test_reply: 仅测试回复，输入内容但不发送",
  
  "//": "=== 定时任务配置 ===",
  "enable_scheduler": false,
  "schedule_time": "03:00",
  
  "//": "定时任务说明：",
  "//": "- enable_scheduler: 启用定时任务",
  "//": "- schedule_time: 每天运行时间（24小时制），如 '03:00' 表示凌晨3点",
  
  "//": "=== 目标论坛配置 ===",
  "target_forums": [
    "fid=141"
  ],
  
  "//": "目标论坛说明：",
  "//": "- 可以添加多个论坛 ID，如 ['fid=141', 'fid=142']",
  "//": "- 机器人会按顺序访问这些论坛获取帖子",
  
  "//": "=== 过滤规则配置 ===",
  "skip_keywords": [
    "公告", "通知", "规则", "版规", "置顶", "精华",
    "2024年永久访问本站方法", "APP下载", "白名单", 
    "邀请码", "访问方法", "申诉", "发布器"
  ],
  
  "skip_prefixes": [
    "【公告】", "【通知】", "【规则】", "【版规】",
    "公告:", "通知:", "规则:", "版规:"
  ],
  
  "//": "过滤规则说明：",
  "//": "- skip_keywords: 包含这些关键词的帖子会被跳过",
  "//": "- skip_prefixes: 以这些前缀开头的帖子会被跳过",
  "//": "- 用于过滤公告、规则等不适合回复的帖子",
  
  "//": "=== 管理员识别配置 ===",
  "admin_usernames": [
    "admin",
    "管理员",
    "版主"
  ],
  
  "//": "管理员识别说明：",
  "//": "- 避免回复管理员的特殊帖子",
  
  "//": "=== 通用回复模板（备用） ===",
  "reply_templates": [
    "谢谢楼主分享！",
    "感谢分享，收藏了！",
    "好资源，支持一下！",
    "楼主辛苦了，谢谢分享！",
    "不错的内容，学习了！",
    "感谢楼主的无私分享！",
    "收藏了，慢慢看！",
    "好东西，必须支持！",
    "楼主威武，感谢分享！",
    "优质内容，点赞！"
  ],
  
  "//": "通用回复模板说明：",
  "//": "- 仅在 enable_smart_reply=false 时使用",
  "//": "- 智能回复模式下，系统会根据帖子内容自动生成回复",
  
  "//": "=== 其他配置 ===",
  "enable_random_delay": true,
  "log_level": "INFO"
}
